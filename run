#!/bin/sh

alias qmake=~/Qt/5.3/clang_64/bin/qmake
alias macdeployqt=~/Qt/5.3/clang_64/bin/macdeployqt

clean() {
	  if [ -f Makefile ]; then
			make clean
	  fi

		files=(.qmake.stash Makefile sk.app sk.dmg dmg)

		for (( i = 0; i < ${#files[*]}; i++ )) {
			echo "Removing ${files[i]}"
			rm -rf ${files[i]}
		}
}

build() {
	  qmake -r

	  if [ -f Makefile ]; then
			make
	  fi

		macdeployqt sk.app
		mkdir dmg
		cp -r sk.app dmg
		ln -s /Applications dmg/Applications
		hdiutil create -volname sk -srcfolder dmg -ov -format UDZO sk.dmg
}

case "$1" in
  clean)
    clean
    echo
    ;;

  build)
		build
    echo
    ;;

  *)
    echo $"Usage: $0 {clean|build}"
    exit 1
esac

exit 0
